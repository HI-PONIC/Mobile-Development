<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
    </style>

    <style name="frontTitle">
        <item name="fontFamily">@font/montserratbold</item>
    </style>

    <style name="textFieldSignUp">
        <item name="boxStrokeColor">@color/outline_color_state_list</item>
        <item name="android:textColorHint">#12372A</item>
        <item name="android:textColor">#12372A</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserratlight</item>
        <item name="endIconTint">#12372A</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textSize">14sp</item> <!-- Adjust text size -->
        <item name="android:paddingTop">8dp</item> <!-- Adjust padding -->
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="textFieldLogin">
        <item name="boxStrokeColor">@color/login_outline_color</item>
        <item name="android:textColorHint">#FBFADA</item>
        <item name="android:textColor">#FBFADA</item>
        <item name="hintTextColor">#FBFADA</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserratlight</item>
        <item name="endIconTint">#FBFADA</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="description">
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="cardStyle">
        <item name="cardBackgroundColor">#436850</item>
    </style>
    
    <style name="cardTextStyle">
        <item name="android:textColor">#FBFADA</item>
    </style>

    <style name="textStyleTitleCek">
        <item name="fontFamily">@font/montserratbold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#12372A</item>
    </style>

    <style name="textStyleDescCek">
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#12372A</item>
    </style>
    <style name="buttonStyleDescCek">
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="cekTextTop">
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#436850</item>
    </style>
</resources>
