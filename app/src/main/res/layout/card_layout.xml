<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:flow_verticalAlign="center"
    android:layout_width="390dp"
    android:layout_height="80dp"
    android:layout_marginBottom="16dp"
    android:layout_gravity="center"
    android:padding="8dp"
    android:background="@drawable/rounded_card_background"
    android:elevation="4dp"
    tools:context=".view.mainView.MainActivity">

    <TextView
        android:id="@+id/Plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserratbold"
        android:text="Hidroponik-1"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />

    <TextView
        android:id="@+id/TanggalTanam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserratregular"
        android:text="Tangal Tanam:"
        android:textColor="@android:color/black"
        android:textSize="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Plant"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Plant"
        app:layout_constraintTop_toBottomOf="@+id/Plant"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/conditions"
        android:layout_width="144dp"
        android:layout_height="37dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image"
        app:layout_constraintStart_toEndOf="@+id/Plant"
        app:layout_constraintTop_toTopOf="@+id/Plant"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="27dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_humidity_home" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:gravity="center"
                android:text="70% RH"
                android:textColor="@android:color/black"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_ph_home" />

            <TextView
                android:id="@+id/ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:gravity="center"
                android:text="pH 8"
                android:textColor="@android:color/black"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="27dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_inten_home" />

            <TextView
                android:id="@+id/inten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:gravity="center"
                android:text="7500 lx"
                android:textColor="@android:color/black"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_temp_home" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:gravity="center"
                android:text="24Â°C"
                android:textColor="@android:color/black"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_card_background"
        android:scaleType="centerCrop"
        android:src="@drawable/lectuce"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

</androidx.constraintlayout.widget.ConstraintLayout>
