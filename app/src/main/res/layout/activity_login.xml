<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#436850"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserratbold"
            android:gravity="left"
            android:paddingBottom="20dp"
            android:text="Monitor,\nAnalyse,\nAutomate,\nHarvest."
            android:textColor="#FBFADA"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/imageViewCabbage"
            android:layout_width="269dp"
            android:layout_height="230dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:src="@drawable/kubislogin" />

        <EditText
            android:id="@+id/editTextEmail"
            android:fontFamily="@font/montserratregular"
            android:layout_width="290sp"
            android:layout_height="34sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/email_edit_text_background"
            android:layout_gravity="center_horizontal"
            android:drawableRight="@drawable/vector_email"
            android:drawablePadding="10dp"
            android:hint="email"
            android:textSize="14sp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#FBFADA" />

        <EditText
            android:id="@+id/editTextPassword"
            android:fontFamily="@font/montserratregular"
            android:layout_width="290sp"
            android:layout_height="34sp"
            android:layout_gravity="center_horizontal"
            android:hint="password"
            android:inputType="textPassword"
            android:drawableRight="@drawable/vector_password"
            android:drawablePadding="10dp"
            android:background="@drawable/email_edit_text_background"
            android:padding="10dp"
            android:textColor="#FBFADA"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/buttonLogin"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Login"
            android:fontFamily="@font/montserratmedium"
            android:textColor="#FBFADA"
            android:textAlignment="center"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/textViewSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Want join our environment?"
            android:textSize="12sp"
            android:textColor="#ADBC9F"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center" />

        <Button
            android:id="@+id/buttonsignup"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAlignment="center"
            android:fontFamily="@font/montserratmedium"
            android:textColor="#FBFADA"
            android:textSize="12sp"/>
    </LinearLayout>
</ScrollView>
